@page "/reset"
@model SendEmailModel
<link href="~/css/reset.css" rel="stylesheet" />
<div class="row justify-content-center align-content-center p-8 mt-8" id="resetPass">
    <div class="col-12 col-lg-6">
        <div class="card card-plain">
            <div class="card-body">
                <form role="form" method="post">
                    <label>Email</label>
                    <div class="mb-3">
                        <input type="email" class="form-controll" asp-for="Email"
                               placeholder="Nhập email đăng ký" aria-label="Email" aria-describedby="email-addon">
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="text-center">
                        <button type="submit" class="btnn bg-gradient-info w-100 mt-4 mb-0">Gửi xác nhận</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
