@page "/ChangePass"
@model ChangePassModel
@{
}
<link href="~/css/reset.css" rel="stylesheet" />

<div class="row justify-content-center align-content-center " id="resetPass" style="margin-bottom:20px">
    <div class="col-12 col-lg-6">
        <div class="card card-plain mt-8">
            <div class="card-body">
                <form role="form" method="post">
                    <label>Mật khẩu mới</label>
                    <div class="mb-3">
                        <input asp-for="NewPassword" class="form-controll" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>

                    </div>
                    <label>Xác nhận mật khẩu</label>

                    <div class="mb-3">
                        <input asp-for="ConfirmPassword" class="form-controll" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                    </div>
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="Token" />
                    <div class="text-center">
                        <button type="submit" class="btnn bg-gradient-info w-100 mt-4 mb-0">Cập nhật</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
