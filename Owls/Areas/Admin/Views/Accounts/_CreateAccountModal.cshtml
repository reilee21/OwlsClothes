@inject RoleManager<IdentityRole> rolesManager
@{
    var roles = rolesManager.Roles.ToList();

}
<div class="modal fade" id="createAccountModal" tabindex="-1" aria-labelledby="createAccountModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createAccountModalLabel">Tạo tài khoản</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="accountForm">
                    <div class="info">
                        <div class="row">
                            <div class="cus_name col-lg-6 col-12 ">
                                <h6 class="text-sm">Họ tên</h6>
                                <input class="form-control" name="FullName" id="cus_name" type="text" />
                            </div>
                            <div class="cus_name col-lg-6 col-12">
                                <h6 class="text-sm">Số điện thoại</h6>
                                <input class="form-control" name="PhoneNumber" id="cus_phone" type="text" pattern="\d{10,11}" />

                            </div>
                        </div>
                        <div class="row">
                            <div class="cus_name col-lg-6 col-12 ">
                                <h6 class="text-sm">Tài khoản đăng nhập</h6>
                                <input class="form-control" name="UserName" type="text"  />

                            </div>

                            <div class="cus_name col-lg-6 col-12">
                                <h6 class="text-sm">Email</h6>
                                <input class="form-control" name="Email" type="text"  />

                            </div>
                        </div>
                        <div class="row">

                            <div class="cus_name col-lg-6 col-12 ">
                                <h6 class="text-sm">Mật khẩu</h6>
                                <input class="form-control" name="Password" type="password"  minlength="6" />

                            </div>
                            <div class="cus_name col-lg-6 col-12">
                                <h6 class="text-sm">Role</h6>
                                <select class="form-control" name="Role" type="text" placeholder="Role">
                                    <option value="invalid">Role</option>
                                    @{
                                        foreach(var r in roles)
                                        {
                                                <option value="@r.Name">@r.NormalizedName</option>
                                        }
                                    }
                                </select>
                                <small></small>
                            </div>
                        </div>
                       

                        <div class="address-form  row">
                            <div class="col-12 col-lg-6 mt-2">
                                <select name="City"
                                        class="form-control"
                                        placeholder="Tỉnh/Thành phố"
                                        id="province"
                                        type="text"
                                        >
                                    <option value="invalid">Tỉnh/Thành phố</option>

                                </select>
                                <small></small>
                            </div>
                            <div class="col-12 col-lg-6 mt-2">
                                <select name="Dicstrict"
                                        class="form-control"
                                        placeholder="Quận/Huyện" id="district" type="text">
                                    <option value="invalid">Quận/Huyện</option>

                                </select>
                                <small></small>
                            </div>
                            <div class="col-12 col-lg-6 mt-2">
                                <select name="Ward"
                                        class="form-control"
                                        placeholder="Phường/Xã" id="village" type="text">
                                    <option value="invalid">Phường/Xã</option>
                                </select>
                                <small></small>
                            </div>
                            <div class="col-12 col-lg-6 mt-2">
                                <input name="Address"
                                       class="form-control"
                                       placeholder="Địa chỉ liên hệ" type="text" />
                                <small></small>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center mt-4 ">
                        <button type="submit" class="btn btn-outline-primary btn-sm mb-0">Tạo</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/account.js"></script>
<script src="~/js/profile.js"></script>
