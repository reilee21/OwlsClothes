@model OwlsUser
@inject UserManager<OwlsUser> _userManager
@{
    var roles = await _userManager.GetRolesAsync(Model);
}

<tr>
    <td>
        <div class="d-flex px-2 py-1">            
            <div class="d-flex flex-column justify-content-center">
                <h6 class="mb-0 text-sm">@Model.FullName</h6>
            </div>
        </div>
    </td>
    <td>
        <div class="d-flex px-2 py-1">
            <div class="d-flex flex-column justify-content-center">
                <h6 class="mb-0 text-sm">@Model.UserName</h6>
            </div>
        </div>
    </td>
    <td>
        <h6 class="mb-0 text-sm text-center">@Model.Email</h6>
    <td>
        <h6 class="mb-0 text-sm text-center">@string.Join(", ", roles)</h6>
    </td>
    <td class="align-middle">
        <a href="" id="editbtn" data-id="@Model.Id" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit">
            Edit
        </a>
    </td>
</tr>
