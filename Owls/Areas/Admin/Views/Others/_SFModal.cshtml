


<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Chỉnh sửa phí vận chuyển</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editForm">
                    <input type="hidden" id="editId" name="Id" />
                    <div class="mb-3">
                        <label for="editCity" class="form-label">Thành phố</label>
                        <input type="text" class="form-control" id="editCity" name="City" required>
                    </div>
                    <div class="mb-3" id="inputfee">
                        <label for="editFee" class="form-label">Phí</label>
                        <input type="number" class="form-control" id="editFee" name="Fee" required>                        
                        <span id="formattedFee">123</span>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    
    document.getElementById('editFee').addEventListener('input', function () {
        let value = this.value;
        value = value.replace(/^0+/, '');
        value = value.replace(/^-/, '');
        if (value < 0 || value === '') {
            this.value = '0';
        }
        let formattedValue = value.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        document.getElementById('formattedFee').innerText = formattedValue + '₫';
    });
</script>